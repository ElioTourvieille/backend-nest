generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  kindeId  String  @unique
  email    String  @unique
  name     String
  role     Role
  grids    Grid[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  free
  premium
  elite
}

model Grid {
  id          Int          @id @default(autoincrement())
  name        String
  user        User         @relation(fields: [userId], references: [id])
  userId      Int
  tournaments Tournament[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Tournament {
  id        Int      @id @default(autoincrement())
  name      String
  buyIn     Float
  startTime DateTime
  format    String
  room      String
  grids     Grid[]

  // Timestamps for tracking
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([name])       
  @@index([buyIn])     
  @@index([startTime])  
}
