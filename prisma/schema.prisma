generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String
  password String
  role     String?
  grids    Grid[]
}

model Grid {
  id          Int          @id @default(autoincrement())
  name        String
  user        User         @relation(fields: [userId], references: [id])
  userId      Int
  tournaments Tournament[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Tournament {
  id        Int      @id @default(autoincrement())
  name      String
  buyIn     Float
  startTime DateTime
  format    String
  room      String
  grids     Grid[]
}
